@model IEnumerable<Goldan_Maria_EB_lab2.Models.LibraryViewModel.OrderGroup>

@{
	ViewData["Title"] = "Ordered Books Statistics";
}

<h1>Statistics</h1>

<h2>Ordered Books Statistics</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Ordered Books
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
				<td>
					@Html.DisplayFor(modelItem => item.OrderDate)
				</td>
				<td>
					@item.BookCount
				</td>
            </tr>
        }
    </tbody>
</table>